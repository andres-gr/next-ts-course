{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "./typings",
      "./node_modules/@types",
      "../node_modules/@types"
    ],
    "paths": {
      "Utils/*": [
        "src/utils/*"
      ],
      "Prisma/*": [
        "src/prisma/*"
      ],
      "Resolvers/*": [
        "src/resolvers/*"
      ],
      "Startup/*": [
        "src/startup/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ]
}
