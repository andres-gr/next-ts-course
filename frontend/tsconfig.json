{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "paths": {
      "Components/*": [
        "components/*"
      ],
      "GraphQL/*": [
        "graphql/generated/*"
      ],
      "Hooks/*": [
        "hooks/*"
      ],
      "Lib/*": [
        "lib/*"
      ],
      "Schemas/*": [
        "schemas/*"
      ],
      "Styles/*": [
        "styles/*"
      ],
      "Utils/*": [
        "utils/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
